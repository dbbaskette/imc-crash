# CRASH - Claims Response Agent System Hive
# Configuration Variables Template
#
# Copy this file to vars.yaml and fill in your values:
#   cp vars.yaml.template vars.yaml
#
# vars.yaml is git-ignored to keep secrets safe

# Google Gemini Configuration (primary LLM for CRASH)
# Get your API key at: https://aistudio.google.com/apikey
# Available models: gemini-2.5-flash, gemini-2.0-flash
google:
  api_key: "YOUR_GOOGLE_API_KEY"
  model: "gemini-2.5-flash"

# Optional: OpenAI Configuration
openai:
  api_key: ""
  model: "gpt-4o"

# Optional: Anthropic Configuration (if using Claude models)
anthropic:
  api_key: ""

# Twilio Configuration (for SMS communications)
twilio:
  account_sid: ""
  auth_token: ""
  from_number: ""  # Your Twilio phone number (e.g., +15551234567)
  test_to_number: ""  # Optional: Override recipient for testing (e.g., +15551234567)

# Gmail Configuration (for email notifications to adjusters)
# To use Gmail SMTP, you need to:
# 1. Enable 2-Factor Authentication on your Google account
# 2. Generate an App Password at: https://myaccount.google.com/apppasswords
# 3. Use that App Password below (not your regular Gmail password)
gmail:
  username: ""           # Your Gmail address (e.g., yourname@gmail.com)
  app_password: ""       # Gmail App Password (16 characters, no spaces)
  adjuster_email: ""     # Recipient email for FNOL reports (e.g., adjuster@company.com)

# Service Ports (defaults shown - change if needed)
ports:
  orchestrator: 8080
  impact_analyst: 8081
  environment: 8082
  policy: 8083
  services: 8084
  communications: 8085

# Service URLs (used by orchestrator to connect to MCP servers)
# Only change these if running services on different hosts
urls:
  impact_analyst: "http://localhost:8081"
  environment: "http://localhost:8082"
  policy: "http://localhost:8083"
  services: "http://localhost:8084"
  communications: "http://localhost:8085"

# Logging
logging:
  level: "INFO"  # DEBUG, INFO, WARN, ERROR

# Impact Analysis Thresholds
thresholds:
  severe_g_force: 5.0
  moderate_g_force: 3.0
  severe_speed_delta: 45
  moderate_speed_delta: 25
